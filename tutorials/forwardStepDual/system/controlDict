FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoDST;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         4; // seconds

deltaT          .1; // deltaT is calculated according to the initialCo in rhoDSTDict

writeControl    runTime;

writeInterval   .1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

